<ul id="comments-list" class="comments-list ">
  {{#data}}
  <li class="comment-main-level">
          <div class="comment-avatar"><img src="/images/defaultAvatar.png" alt="avatar"></div>
          <div class="comment-box">
            <div class="comment-head">
              <h6 class="comment-name"><a href="/profile/{{person.id}}">
                {{#person.alias}}{{person.alias}}{{/person.alias}}
                {{^person.alias}}אנונימי{{/person.alias}}
              </a></h6>
              <span>{{time_ago}}</span>
            </div>
            <div class="comment-content">
              {{content}}
            </div>
          </div>
      </li>
  {{/data}}
</ul>