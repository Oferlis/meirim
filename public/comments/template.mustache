{{#me.id}}
<form class="add-comment">    
 <input type="hidden" name="parent_id" value="0">
 <input type="hidden" name="plan_id" value="{{plan_id}}">
  <div class="form-group">
    <label for="exampleInputPassword1" class="sr-only">Password</label>
    <textarea required placeholder="מה דעתך על התוכנית?"  name="content" class="form-control" rows="1"></textarea>
  </div>
  {{^me.alias}}
  <div class="form-group" hidden>
      <label for="exampleInputEmail1" class="sr-only">כינוי</label>
      <input type="text" class="form-control" required name="alias" placeholder="כינוי" value="{{me.alias}}">
    </div>
    {{/me.alias}}
  <button type="submit" class="btn btn-success float-left">שליחה</button>
</form>

{{/me.id}}
